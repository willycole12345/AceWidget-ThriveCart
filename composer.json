{
    "name": "ace/widget",
    "description": "sales system for Acme Widget Co",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "William Cole",
            "email": "cole.williams84@yahoo.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "phpstan/phpstan": "^1.12"
    },
    "autoload": {
        "psr-4": {
            "Ace\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ace\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "analyse": "vendor/bin/phpstan analyse src --level=7"
    }
}
